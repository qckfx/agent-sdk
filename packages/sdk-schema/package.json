{
  "name": "@qckfx/sdk-schema",
  "version": "0.1.0",
  "description": "qckfx Agent configuration schema and validation utilities (stand-alone).",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "agent-config.schema.json"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./schema": "./agent-config.schema.json"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "npm run build:ts && npm run generate:schema",
    "build:ts": "tsc -p tsconfig.json",
    "generate:schema": "node dist/scripts/generate-json-schemas.js"
  },
  "dependencies": {
    "zod": "^3.24.3"
  },
  "devDependencies": {
    "typescript": "^5.0.4",
    "zod-to-json-schema": "^3.21.1"
  }
}
