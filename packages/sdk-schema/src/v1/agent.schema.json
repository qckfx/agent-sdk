{
  "$ref": "#/definitions/AgentConfig",
  "definitions": {
    "AgentConfig": {
      "type": "object",
      "properties": {
        "environment": {
          "type": "object",
          "properties": {
            "dockerfile": {
              "type": "string"
            },
            "repos": {
              "type": "array",
              "items": {
                "type": "string",
                "pattern": "^[A-Za-z0-9_.-]+\\/[A-Za-z0-9_.-]+$"
              }
            }
          },
          "additionalProperties": false
        },
        "defaultModel": {
          "type": "string"
        },
        "logLevel": {
          "type": "string",
          "enum": [
            "debug",
            "info",
            "warn",
            "error"
          ],
          "default": "info"
        },
        "description": {
          "type": "string"
        },
        "allowedTools": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "cachingEnabled": {
          "type": "boolean",
          "default": true
        },
        "systemPrompt": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "object",
              "properties": {
                "file": {
                  "type": "string"
                }
              },
              "required": [
                "file"
              ],
              "additionalProperties": false
            }
          ]
        },
        "tools": {
          "type": "array",
          "items": {
            "anyOf": [
              {
                "type": "string"
              },
              {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "configFile": {
                    "type": "string"
                  }
                },
                "required": [
                  "name",
                  "configFile"
                ],
                "additionalProperties": false
              }
            ]
          }
        },
        "experimentalFeatures": {
          "type": "object",
          "properties": {
            "subAgents": {
              "type": "boolean",
              "default": false
            },
            "promptFiles": {
              "type": "boolean",
              "default": false
            },
            "localEnvironment": {
              "type": "boolean",
              "default": false
            }
          },
          "additionalProperties": false,
          "default": {}
        }
      },
      "additionalProperties": false
    }
  },
  "$schema": "http://json-schema.org/draft-07/schema#"
}